---
layout: layouts/me-header.njk
stylesheets:
    - /static/stylesheets/pages/blog.css
    - /static/stylesheets/components/items.css
---

<section class="Section Blog">
    <ol class="Items">
        {% for article in articles %}
        <li class="Item">
            <time class="Item__Date fs-16">{{ article.date | formatDate }}</time>
            <div>
                <a class="Item__Heading fs-24 fw-900" href="{{ article.url }}" target="_blank" rel="noopener noreferrer">{{ article.title }}</a>
                <p class="Item__Subheading">{{ article.summary }}</p>
                <ul class="Item__Tags fs-16">
                    {% for tag in article.tags %}
                    <li>#{{ tag }}</li>
                    {% endfor %}
                </ul>
            </div>
        </li>
        {% endfor %}
    </ol>
</section>

<section class="Section Pagination">
    <a class="Paginator Paginator--previous fs-18" href="#">
        <img src="/static/images/icons/left.svg" alt="Previous">
        7 older articles
    </a>
    <a class="Paginator Paginator--next fs-18" href="#">
        5 newer articles
        <img src="/static/images/icons/right.svg" alt="Next">
    </a>
</section>
